<h1>Movie Lists</h1>
<ul>
  <% @lists.each do |list| %>
    <li><%= link_to list.name, list_path(list) %></li>
    <%= link_to "Delete list", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-warning"%>
  <% end %>
</ul><br>
<a><%= link_to 'Create a new list', new_list_path, class:"btn btn-primary" %></a>
